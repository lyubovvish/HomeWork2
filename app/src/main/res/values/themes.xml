<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeWork4" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sex</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="tittle">
        <item name="android:textSize">20sp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/tittle</item>
        <item name="fontFamily">Roboto</item>
        <item name="lineHeight">26sp</item>
    </style>

    <style name="name">
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/name</item>
        <item name="fontFamily">Roboto</item>
        <item name="lineHeight">21sp</item>
    </style>

    <style name="years">
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/years</item>
        <item name="fontFamily">Roboto</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="bio">
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/bio</item>
        <item name="fontFamily">Roboto</item>
        <item name="lineHeight">21sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="sex">
        <item name="android:textSize">10sp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/sex</item>
        <item name="fontFamily">Roboto</item>
        <item name="lineHeight">13sp</item>
    </style>
</resources>